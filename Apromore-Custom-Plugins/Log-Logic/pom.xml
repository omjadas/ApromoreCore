<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
	
    <parent>
        <groupId>org.apromore</groupId>
        <artifactId>apromore</artifactId>
        <version>1.1</version>
        <relativePath>../../</relativePath>
    </parent>
	
    <artifactId>log-logic</artifactId>
    <version>1.0.0</version>
    <packaging>bundle</packaging>
    <name>Log Processing Logic</name>

    <build>
        <plugins>
        	<plugin>
            	<groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Import-Package>
                            !org.apache.hive.service.cli.thrift,
                            org.springframework.beans.factory.aspectj,
                            *
                        </Import-Package>
                        <Export-Package>
                            org.apromore.logman,
                            org.apromore.logman.attribute,
                            org.apromore.logman.attribute.exception,
                            org.apromore.logman.attribute.log,
                            org.apromore.logman.attribute.log.relation,
                            org.apromore.logman.attribute.log.variants,
                            org.apromore.logman.attribute.graph,
                            org.apromore.logman.attribute.graph.filtering,
                            org.apromore.logman.utils
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>		
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.22.0</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire-junit4</artifactId>
                        <version>2.22.0</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </configuration>
            </plugin>

        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
        </dependency>
  
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>      
        
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-math3</artifactId>
        </dependency>
        
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>log-osgi</artifactId>
            <version>1.1</version>
        </dependency>
        
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>eclipse-collections-osgi</artifactId>
            <version>1.1</version>
        </dependency>				
        
        <dependency>
            <groupId>org.apache.servicemix.bundles</groupId>
            <artifactId>org.apache.servicemix.bundles.joda-time</artifactId>
            <version>2.3_1</version>
        </dependency>        

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
        
    </dependencies>
</project>

